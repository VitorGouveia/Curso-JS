    "@types/node": "^17.0.5",
    "@types/uuid": "^8.3.3",
    "gen-env-types": "^1.3.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.10",
    "@mikro-orm/core": "^4.5.10",
    "@mikro-orm/migrations": "^4.5.10",
    "@mikro-orm/postgresql": "^4.5.10",
    "apollo-server-express": "2",
    "argon2": "^0.28.3",
    "cookie-parser": "^1.4.6",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.2",
    "graphql": "^15.3.0",
